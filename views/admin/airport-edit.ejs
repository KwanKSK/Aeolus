<%- include('../partials/header-admin.ejs') %>
<%- include('../partials/nav-admin.ejs') %>

<section class="add-info-box">
    <h1> Edit Airport</h1>
    <form class="add-info-subbox" action='/admin/airport/<%= airport._id %>/edit?_method=PUT' method="POST">
        <div class="container">
            <div class="row">
                <div class="mb-6 col-md-6">
                    <label class="form-label">Airport Name</label>
                    <div class="input-group">
                        <input type="text" class="form-control" name="airport[name]"
                            placeholder="<%= airport.name %>" value="<%= airport.name %>" required>
                        <input type="text" class="form-control" name="airport[IATA]"
                            placeholder="<%= airport.IATA %>" value="<%= airport.IATA %>" required>
                    </div>                    
                </div>
                <div class="mb-3 col-md-3">
                    <label class="form-label">City</label>
                    <input type="text" class="form-control" name="airport[city]"
                        placeholder="<%= airport.city %>" value="<%= airport.city %>" required>
                </div>
                <div class="mb-3 col-md-3">
                    <label class="form-label">Country</label>
                    <input type="text" class="form-control" name="airport[country]"
                        placeholder="<%= airport.country %>" value="<%= airport.country %>" required>
                </div>
            </div>   

            <div class="row">
                <div class="mb-11 col-md-11"></div>
                <button type="submit" class="btn btn-primary mb-1 col-md-1">UPDATE</button>
            </div>

        </div>
    </form>
</section>

<%- include('../partials/footer-admin.ejs') %>